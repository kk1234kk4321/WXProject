      <view class="item-btn" style="width:20%;text-align:right;padding-right:6%;color:#00A7D6;" bindtap="updateNickname">
        确定
      </view>
    </view>
    <view style="width:94%;margin:0 auto;color:red;font-size:14px;" wx:if="{{mes!=''}}">
      <view style="padding-left:6%;">* {{mes}}</view>
    </view>

